<% include ../partials/header %>
<div class="row">
    <div class="col-md-3">
        <p class="lead">YelpCamp</p>
        <div class="list-group">
            <div class="list-group-item active">List 1</div>
            <div class="list-group-item">wew</div>
            <div class="list-group-item">ewew</div>
        </div>
    </div>
<div class="col-md-9">
    <div class="thumbnail">
            <img src="<%=camp.image%>" class="img-fluid w-100 h-100">
            <div class="caption px-2">
                <h4 class="float-right">$<%=camp.price%> per night</h4>
                <h4><a ><%=camp.name%> </a></h4>
                <p><%=(camp.description&&camp.description!==null)?camp.description:'no info provided'%></p>
                <p><em>Submitted by: <%=camp.author.username%> </em></p>
               <%if (currentuser&&camp.author.id.equals(currentuser._id)){%>
                <a href="/campgrounds/<%=camp._id%>/edit" class="btn btn-warning">Edit</a>
                <form class="d-inline" action="/campgrounds/<%=camp._id%>?_method=DELETE" method="post">
                  <button class="btn btn-danger">Delete</button>
                </form>
                <%}%>
            </div>
            <hr>
    </div>
   <div class="well">
       <div class="text-right mb-1">
           
            <a href="/campgrounds/<%=camp._id%>/comments/new" class="btn btn-primary"> Add a new comment</a>
        </div>
        <hr>
        <% camp.comments.forEach(comment=>{%>
             <div class="row">
                <div class="col-md-12">
                        <div class="float-right">10 days ago</div>
                       <strong><%=comment.author.username%></strong> 
                       
                       <p><%=comment.text%></p>
                       <%if (currentuser&&comment.author.id.equals(currentuser._id)){%>
                       <a href="/campgrounds/<%=camp._id%>/comments/<%=comment._id%>/edit" class="btn btn-warning btn-sm">Edit</a>
                       <form class="d-inline" action="/campgrounds/<%=camp._id%>/comments/<%=comment._id%>?_method=DELETE" method="post">
                        <button class="btn btn-danger btn-sm">Delete</button>
                      </form>
                      <%}%>
                </div>
             </div>
            
        
        <%})%>
   </div>



</div>
</div>
 <% include ../partials/footer %>