<% include ../partials/header %>
        <header class="jumbotron">
            <div class="container">
                <h1>Welcome to YelpCamp!</h1>
                <p>View our best hand-picked camps</p>
                <p>
                    <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add a new Campground</a>
                </p>
            </div>
        </header>


        <div class="row">
            <div class="col-md-12">
                <h3>Our most Popular Sites</h3>
            </div>

            <% campgrounds.forEach(campground=>{ %>
                <div class="col-md-3 col-sm-6">
                    <figure class="figure">
                        <img src="<%= campground.image%>" class="figure-img img-fluid   rounded" alt="<%= campground.name %>">
                        <figcaption class="figure-caption text-center">
                            <%=campground.name%>
                        </figcaption>
                        <p class="text-center">
                        <a href="campgrounds/<%=campground._id%>" class="btn btn-primary btn-sm ">More info</a>
                    </p>
                    </figure>
                </div>


                <% }) %>
        </div>
   
    <% include ../partials/footer %>