<% include ../partials/header %>

<div class="container">
    <div class="row my-4">
<h1 class="col-md-12 mt-5 text-center">Edit comment</h1>
<div class="mx-auto">
<form action="/campgrounds/<%=camp_id%>/comments/<%=comment._id%>?_method=PUT" method="post">
  
    <div class="form-group">
      <label for="text">Text</label>
      <input type="text" name="comment[text]" value="<%=comment.text%>"  class="form-control">
    </div>
    
    <button type="submit" class="btn btn-lg btn-block btn-primary">Submit</button>
  </form>
</div>
</div>
</div>

